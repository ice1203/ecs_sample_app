{
  "containerDefinitions": [
    {
      "cpu": 256,
      "essential": true,
      "image": "{{ tfstate `module.frontend-ecr.aws_ecr_repository.myecr.repository_url` }}:{{ must_env `IMAGE_TAG` }}",
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "{{ tfstate `module.frontend-ecs.aws_cloudwatch_log_group.my_ecs_task.name` }}",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "main_app"
        }
      },
      "readonlyRootFilesystem": true,
      "memoryReservation": 512,
      "name": "main_app",
      "portMappings": [
        {
          "name": "main_app-8080-tcp",
          "containerPort": 8080,
          "hostPort": 8080,
          "protocol": "tcp"
        }
      ]
    },
    {
      "name": "aws-otel-collector",
      "image": "public.ecr.aws/aws-observability/aws-otel-collector:v0.32.0",
      "cpu": 256,
      "memory": 256,
      "links": [],
      "portMappings": [],
      "essential": true,
      "entryPoint": [],
      "command": [
          "--config",
          "/etc/ecs/ecs-xray.yaml"
      ],
      "environment": [],
      "environmentFiles": [],
      "mountPoints": [],
      "volumesFrom": [],
      "secrets": [],
      "dnsServers": [],
      "dnsSearchDomains": [],
      "extraHosts": [],
      "dockerSecurityOptions": [],
      "dockerLabels": {},
      "ulimits": [],
      "logConfiguration": {
          "logDriver": "awslogs",
          "options": {
            "awslogs-group": "{{ tfstate `module.frontend-ecs.aws_cloudwatch_log_group.my_ecs_task.name` }}",
            "awslogs-region": "ap-northeast-1",
            "awslogs-stream-prefix": "otel-collector"
          },
          "secretOptions": []
      },
      "systemControls": [],
      "credentialSpecs": []
    }
  ],
  "pidMode": "",
  "cpu": "256",
  "executionRoleArn": "{{ tfstate `module.frontend-ecs.aws_iam_role.ecs_task_execution_role.arn` }}",
  "family": "ecs-handson-samplejs",
  "ipcMode": "",
  "memory": "512",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "tags": [
    {
      "key": "Environment",
      "value": "prod"
    },
    {
      "key": "iac",
      "value": "ecspresso"
    }
  ],
  "taskRoleArn": "{{ tfstate `module.frontend-ecs.aws_iam_role.ecs_task_role.arn` }}"
}
